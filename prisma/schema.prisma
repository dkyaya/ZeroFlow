generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  preferredName  String? 
  email          String   @unique
  password       String
  height         Int      // stored as cm if metric, inches if imperial
  weight         Int      // stored as lbs or kg
  age            Int
  sex            String   // "male" | "female"
  goal           String   // "lose" | "maintain" | "gain" | "performance"
  activityLevel  String   // "sedentary" | "light" | "moderate" | "high"
  unitSystem     String   // "imperial" | "metric"

  foodLogs       FoodLog[]
  createdAt      DateTime @default(now())
}




model FoodLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  name      String
  calories  Int
  createdAt DateTime @default(now())

  User      User @relation(fields: [userId], references: [id])
}
